<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ExpensesTracker" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#4282D1</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">#7286F3</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#72F1E5</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">#1D7DD3</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="LabelText" parent="Theme.Design">
        <item name="android:textColor">#060B17</item>
        <item name="android:textSize">26sp</item>
        <item name="fontFamily">monospace</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="LoginText" parent="Theme.Design">
        <item name="android:textColor">#27292E</item>
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">monospace</item>
    </style>

    <style name="CategoriesText" parent="Theme.Design">
        <item name="android:textColor">#27292E</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">monospace</item>
    </style>

    <style name="EnterText" parent="Theme.Design">
        <item name="android:textColor">#27292E</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">monospace</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="ButtonTextView" parent="Widget.AppCompat.TextView">
        <item name="android:background">@drawable/button_confirm</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">24sp</item>
        <item name="fontFamily">monospace</item>
    </style>

</resources>